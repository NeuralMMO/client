.BuildConfiguration
{
    padding-bottom: 2px;
}

.BuildConfiguration__asset-header
{
    padding-bottom: 5px;
}

.BuildConfiguration__asset-header-label
{
    height: 24px;
    font-size: 16px;
    -unity-font-style:bold;
    border-bottom-width: 2px;
}

.BuildConfiguration__asset-dependencies
{
    margin-left: 0;
    padding: 5px 5px 5px 21px;
    border-radius: 5px;
}

.BuildConfiguration__build-action
{
    width: 130px;
    margin-right: 0;
    border-radius: 3px 0 0 3px;
}

.BuildConfiguration__build-dropdown
{
    margin-left: 0;
    border-radius: 0 3px 3px 0;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 0;
    margin-bottom: 1px;
    margin-top: 2px;
}

.BuildConfiguration__build-dropdown > .unity-base-field__input
{
    min-width: 20px;
    border-radius: 0 3px 3px 0;
    border-color: transparent;
}

.BuildConfiguration__header
{
    height: 18px;
    font-size: 12px;
    -unity-font-style:bold;
}

.BuildConfiguration__header .unity-toggle__checkmark
{
    align-self: center;
}

.BuildConfiguration__add-component-button
{
    align-self: flex-end;
    width: 30px;
    height: 30px;
    background-color: transparent;
    border-width: 0;
}

.BuildConfiguration__optional-components
{
    margin: 1px 3px 1px 4px;
    padding: 7px 5px 7px 21px;
    border-radius: 5px;
}
